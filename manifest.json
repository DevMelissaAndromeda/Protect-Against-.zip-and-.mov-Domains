{
    "manifest_version": 3,
    "version": "1.0.0",
    "name": "Protect Against @.zip & @.mov Domains",
    "description": "Marks '@.zip' & @.mov' domains in red as dangerous.",
    "author": "Melissa Andromeda",
    "icons": {
        "16": "images/icon_16.png",
        "32": "images/icon_32.png",
        "48": "images/icon_48.png",
        "128": "images/icon_128.png"
      },

    "host_permissions": [
        "<all_urls>"
    ],

    "permissions": [
        "tabs",
        "scripting",
        "background"
    ],

    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "run_at": "document_end",
            "js": [
                "index.js"
            ]
        }
    ],

    "background": {
        "service_worker": "index.js"
    }
}