{
    "manifest_version": 3,
    "version": "1.0.0",
    "name": "Protect Against (@)ASPERAND.zip Domains",
    "description": "Marks '@.zip' domains in red as dangerous.",
    "author": "Melissa Andromeda",

    "host_permissions": [
        "<all_urls>"
    ],

    "permissions": [
        "tabs",
        "scripting",
        "background"
    ],

    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "run_at": "document_end",
            "js": [
                "index.js"
            ]
        }
    ],

    "background": {
        "service_worker": "index.js"
    }
}